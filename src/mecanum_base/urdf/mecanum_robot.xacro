<?xml version="1.0"?>
<robot name="mecanum_robot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- =========================
       ðŸ“Œ PARAMETRI DEL ROBOT
       ========================= -->
  <!-- Geometria -->
  <xacro:property name="wheel_radius" value="0.05"/>
  <xacro:property name="L" value="0.15"/>
  <xacro:property name="W" value="0.15"/>

  <!-- Hardware -->
  <xacro:property name="mock" value="false"/>
  <xacro:property name="accel_limit" value="25.0"/>
  <xacro:property name="ticks_per_rev" value="2048"/>
  <xacro:property name="gear_ratio" value="30.0"/>

  <!-- Inversione direzione ruote -->
  <xacro:property name="invert_fl" value="1"/>
  <xacro:property name="invert_fr" value="1"/>
  <xacro:property name="invert_rl" value="1"/>
  <xacro:property name="invert_rr" value="1"/>

  <!-- =========================
       ðŸ“Œ LINK DI BASE
       ========================= -->
  <link name="base_footprint"/>
  <joint name="base_footprint_to_base_link" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.4 0.3 0.1"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <inertial>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <mass value="10.0"/>
      <inertia ixx="0.2" ixy="0" ixz="0" iyy="0.2" iyz="0" izz="0.2"/>
    </inertial>
  </link>

  <!-- =========================
       ðŸ“Œ MACRO RUOTA
       ========================= -->
  <xacro:macro name="wheel" params="name x y">
    <link name="${name}_link">
      <visual>
        <geometry>
          <cylinder radius="${wheel_radius}" length="0.05"/>
        </geometry>
        <!-- âœ… Rotazione corretta sull'asse X -->
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
        <material name="black">
          <color rgba="0.1 0.1 0.1 1.0"/>
        </material>
      </visual>
    </link>
    <joint name="${name}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${name}_link"/>
      <origin xyz="${x} ${y} 0.05" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <!-- =========================
       ðŸ“Œ QUATTRO RUOTE MECANUM
       ========================= -->
  <xacro:wheel name="front_left_wheel"  x="${L}"  y="${W}"/>
  <xacro:wheel name="front_right_wheel" x="${L}"  y="${-W}"/>
  <xacro:wheel name="rear_left_wheel"   x="${-L}" y="${W}"/>
  <xacro:wheel name="rear_right_wheel"  x="${-L}" y="${-W}"/>

  <!-- =========================
       ðŸ“Œ IMU
       ========================= -->
  <link name="imu_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.02"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0"
               iyy="0.00001" iyz="0.0" izz="0.00001"/>
    </inertial>
  </link>
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.0 0.0 0.1" rpy="0 0 0"/>
  </joint>

  <!-- =========================
       ðŸ“Œ PAN/TILT CAMERA
       ========================= -->
  <link name="pan_link">
    <visual>
      <geometry>
        <box size="0.03 0.03 0.01"/>
      </geometry>
      <origin xyz="0 0 0.005" rpy="0 0 0"/>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>
  <joint name="pan_joint" type="revolute">
    <parent link="base_link"/>
    <child link="pan_link"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1.0" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <link name="tilt_link">
    <visual>
      <geometry>
        <box size="0.04 0.04 0.04"/>
      </geometry>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>
  <joint name="tilt_joint" type="revolute">
    <parent link="pan_link"/>
    <child link="tilt_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="1.0" velocity="1.0" lower="-1.0" upper="1.0"/>
  </joint>

  <!-- =========================
       ðŸ“Œ SONAR VISUALI
       ========================= -->
  <xacro:macro name="sonar" params="name x y z">
    <link name="${name}_link">
      <visual>
        <geometry>
          <cylinder radius="0.01" length="0.02"/>
        </geometry>
        <!-- âœ… Ruota solo la geometria per farla puntare in avanti -->
        <origin xyz="0 0 0" rpy="0 1.5708 0"/>
        <material name="blue">
          <color rgba="0.2 0.2 1.0 1.0"/>
        </material>
      </visual>
    </link>
    <joint name="${name}_joint" type="fixed">
      <parent link="base_link"/>
      <child link="${name}_link"/>
      <!-- âœ… Nessuna rotazione: frame punta in avanti -->
      <origin xyz="${x} ${y} ${z}" rpy="0 0 0"/>
    </joint>
  </xacro:macro>


  <xacro:sonar name="sonar_front"  x="0.2"  y="0.0"  z="0.05"/>
  <xacro:sonar name="sonar_left"   x="0.0"  y="0.2"  z="0.05"/>
  <xacro:sonar name="sonar_right"  x="0.0"  y="-0.2" z="0.05"/>

  <!-- =========================
       ðŸ“Œ ROS2_CONTROL
       ========================= -->
  <ros2_control name="MecanumSystem" type="system">
    <hardware>
      <plugin>mecanum_hardware/MecanumSystem</plugin>
      <param name="wheel_radius">${wheel_radius}</param>
      <param name="L">${L}</param>
      <param name="W">${W}</param>
      <param name="mock">${mock}</param>
      <param name="accel_limit">${accel_limit}</param>
      <param name="ticks_per_rev">${ticks_per_rev}</param>
      <param name="gear_ratio">${gear_ratio}</param>
      <param name="invert_fl">${invert_fl}</param>
      <param name="invert_fr">${invert_fr}</param>
      <param name="invert_rl">${invert_rl}</param>
      <param name="invert_rr">${invert_rr}</param>
      <param name="serial_port">/dev/ttyUSB0</param>
      <param name="baudrate">1000000</param>
    </hardware>

    <!-- âœ… Interfacce di comando e stato per le ruote -->
    <joint name="front_left_wheel_joint">
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <command_interface name="velocity"/>
    </joint>
    <joint name="front_right_wheel_joint">
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <command_interface name="velocity"/>
    </joint>
    <joint name="rear_left_wheel_joint">
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <command_interface name="velocity"/>
    </joint>
    <joint name="rear_right_wheel_joint">
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <command_interface name="velocity"/>
    </joint>

    <!-- âœ… Interfacce per servo pan/tilt -->
    <joint name="pan_joint">
      <state_interface name="position"/>
      <command_interface name="position"/>
    </joint>
    <joint name="tilt_joint">
      <state_interface name="position"/>
      <command_interface name="position"/>
    </joint>

    <!-- âœ… Interfacce per sensori sonar -->
    <sensor name="sonar_front">
      <state_interface name="range"/>
    </sensor>
    <sensor name="sonar_left">
      <state_interface name="range"/>
    </sensor>
    <sensor name="sonar_right">
      <state_interface name="range"/>
    </sensor>
  </ros2_control>
</robot>
